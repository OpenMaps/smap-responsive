

headerBg = rgba(255,255,255, 1)
headerColor = #000

catHoverColor = rgba(250,250,250,1)

hoverColor = rgba(210,210,210,.5)
bgColorHeaderOpen = rgba(255,255,255, 1)
colorHeaderOpen = #555

cpPanelBg = none
mobPanelBg = #38454e


#lswitch-btn
	z-index 1
	position absolute
	left 0px
	bottom 80px
	padding 8px 3px 5px 0px
	border 1px solid #999
	border-width 1px 1px 1px 0
	box-shadow 1px 1px 4px 0 rgba(100,100,100,.5)
	background-color #fff
	background-color rgba(255,255,255,.8)
	cursor pointer
	border-radius 0 0.4em 0.4em 0


.lswitch-panel .panel
	box-shadow none

.lswitch-panelslide
	transition margin-left 300ms ease

.lswitch-panel
	box-shadow inset #000 -3px 0px 17px
	z-index -1
	position absolute
	left 0px
	top 0px
	width 70%
	background-color mobPanelBg
	height 100%
	max-width 300px
	padding 0 20px
	padding-top 8px
	overflow-y auto
	-ms-overflow-style -ms-autohiding-scrollbar !important /* Nasty bug fix Required for WP8 IE10!!! */
	font-size 1.4em

// .lswitch-panel .panel-heading
// 	background-color headerBg
// 	color headerColor

.map-with-header .lswitch-panel
	padding-top 4em

.lswitch-cat span
	margin-left .7em

// .lswitch-cat i
// 	transition all .2s // only use transition effect for desktop due to rendering problem in Chrome e.g.


.lswitch-cat.open, .lswitch-cat.open:hover
	background-color bgColorHeaderOpen
	color colorHeaderOpen

.lswitch-cat.open i
	transform rotate(90deg)

.lswitch-catcont
	height 0
	overflow hidden
	// transition all .5s  // only use transition effect for desktop due to rendering problem in Chrome e.g.
	
	border none
	opacity 0
	// box-shadow rgba(0, 0, 0, 0.29) 1px 1px 2px inset
	// border-left 4px solid rgba(66,139,202,0.7)

.lswitch-catcont.lswitch-catcont-visible
	height auto
	opacity 1
	background-color rgba(255,255,255,.3)
	overflow visible

.lswitch-catcont a
	border-radius 0 !important
	padding-left 1.8em

// .lswitch-catcont a:first-child
// 	margin 0

.lswitch-cat, .lswitch-panel a
	cursor pointer
	background none //#38454E
	// color #eee
	border none
	// border-radius: 0 !important
	margin-top 1px

.lswitch-cat
	// color colorHeaderOpen
	// background-color bgColorHeaderOpen
	margin-top 2px

.lswitch-cat:hover
	background-color catHoverColor

