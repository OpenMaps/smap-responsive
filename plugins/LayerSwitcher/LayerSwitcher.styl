

headerBg = rgba(255,255,255, 1)
headerColor = #000

catHoverColor = rgba(250,250,250,1)

hoverColor = rgba(245,245,245,.9)
bgColorHeaderOpen = rgba(255,255,255, 1)
colorHeaderOpen = #000

cpPanelBg = none
mobPanelBg = #38454e

indentDist = 1.3em


#lswitch-btn
	z-index 1001
	position absolute
	left 0px
	bottom 80px
	padding 8px 3px 5px 0px
	border 1px solid #999
	border-width 1px 1px 1px 0
	box-shadow 1px 1px 4px 0 rgba(100,100,100,.5)
	background-color #fff
	background-color rgba(255,255,255,.8)
	cursor pointer
	border-radius 0 0.4em 0.4em 0


// This class is temporarily added to the mapdiv during slide to avoid 
// changes in media query width when runnning the map in an iframe
.mapdiv-slidetransition
	transition all 0.3s ease !important

.lswitch-panel .panel
	box-shadow none

.lswitch-panelslide
	transition margin-left 300ms ease

.lswitch-panel
	box-shadow inset #000 -3px 0px 17px
	z-index -1
	position absolute
	left 0px
	top 0px
	width 70%
	background-color mobPanelBg
	height 100%
	max-width 300px
	padding 0 0.6em
	padding-top 10px
	overflow-y auto
	-ms-overflow-style -ms-autohiding-scrollbar !important /* Nasty bug fix Required for WP8 IE10!!! */
	font-size 1.4em
	.panel-heading
		margin-bottom 2px

// .lswitch-panel .panel-heading
// 	background-color headerBg
// 	color headerColor

.map-with-header .lswitch-panel
	padding-top 4em

.lswitch-cat span
	margin-left .7em

// .lswitch-cat i
// 	transition all .2s // only use transition effect for desktop due to rendering problem in Chrome e.g.




.lswitch-cat.open i
	transform rotate(90deg)

.lswitch-catcont
	height 0
	overflow hidden
	overflow-x visible
	// transition all .5s  // only use transition effect for desktop due to rendering problem in Chrome e.g.
	
	border none
	opacity 0
	border-color #fff
	border-color rgba(255,255,255, 0)
	a:first-child
		margin-top 2px

	// box-shadow rgba(0, 0, 0, 0.29) 1px 1px 2px inset


.lswitch-catcont.lswitch-catcont-visible
	// margin-left 10px
	height auto
	opacity 1
	background-color none //rgba(255,255,255,.3)
	overflow visible

	.lswitch-cat
		padding-left 1em + indentDist
		// border-left 4px solid #666

	.lswitch-catcont
		.lswitch-cat
			padding-left indentDist*3
			// border-left 8px solid #aaa
			
		.lswitch-catcont.lswitch-catcont-visible a
			padding-left indentDist*4
	.lswitch-catcont a
		padding-left 2em + indentDist*1


// .lswitch-catcont.lswitch-catcont-visible
// 	width calc(100% + 1px)

.lswitch-catcont a
	border-radius 0 !important

.lswitch-catcont.lswitch-catcont-visible a
	padding-left 2.5em
	transition all 0.2s

