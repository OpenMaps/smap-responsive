/* Added to html and body temporarily to avoid scrollbars during transitions */
.lswitch-overflow-hidden
	overflow hidden !important	


.panel-with-toolbar
	padding-top 5em



@media (max-width: 991px)
	.lswitch-cat
		color #fff


	.lswitch-panel
		position absolute !important
		background-color mobPanelBg

	// Zoom-in-effect when showing and hiding the panel
	// .lswitch-panel .panel
	// 	transition all 400ms
	// 	transform translate(-20%,0) scale(0.95)
	
	// .lswitch-panel.panel-visible .panel
	// 	transform translate(0,0) scale(1)
	
	.lswitch-panel a
		color #fff
		background none
	
	.lswitch-panel a.active, .lswitch-panel a.active:hover, .lswitch-panel a.active:active
		// background none !important
		background #000 !important
		color #fff

	a.list-group-item.active, a.list-group-item.active:hover, a.list-group-item.active:focus
		background #000 !important
		color #fff
	
	.lswitch-panel a:hover
		background none !important

	.lswitch-panel .panel-default > .panel-heading
		background none
		color #fff
		outline none
		font-weight bold
		font-size 1.2em
	



@media (min-width: 992px)
	/* For desktop computers */

	a.list-group-item
		color #000

	a.list-group-item.active, a.list-group-item.active:hover, a.list-group-item.active:focus
		z-index 2
		// color white
		// background-color #428bca
		// border-color #428bca
		background-color #fff
		color #000
		font-weight bold

	.lswitch-panel a.active, .lswitch-panel a.active:hover, .lswitch-panel a.active:active
		background none
		background-image none !important
		text-shadow none !important
		background-color #fff
		background-color rgba(255,255,255,0.8)
		color #000
		color rgba(0,0,0,1)
		font-weight bold

	.lswitch-cat:hover
		background-color catHoverColor

	.lswitch-cat.open, .lswitch-cat.open:hover
		background-color bgColorHeaderOpen
		color colorHeaderOpen

	.lswitch-cat
		color #000
		background-color #fff
		outline 1px solid #ccc
	
	/* Avoid things appearing under the switcher */
	.leaflet-left
		left 310px
	
	.lswitch-catcont
		transition all .5s

	.lswitch-cat i
		transition transform .2s, color .1s
		font-size 1.1em
	.lswitch-cat i:hover
		color #00EDED
	
	#mapdiv
		margin-left 0px !important
	
	
	#lswitch-btn
		display none !important
	
	
	.lswitch-panel
		box-shadow none
		transition all 300ms
		
		display block !important
		background-color none
		background-color rgba(255,255,255, 0)
		z-index 900

		max-height 100%

		// Note! One problem that comes with position:relative here is that 
		// if the layer panel is higher than the win height, scrollbars
		// won't appear, and the overflow:hidden of the parent container
		// is also not hiding the div.
		position relative
	

	.lswitch-panel a
		// background none
		// transition all 100ms
		border-color #fff
		background-color rgba(255,255,255, 0.8)
	
	.lswitch-panel a:hover, .lswitch-panel a:active, .lswitch-panel a.active:hover, .lswitch-panel a.active:active
		background-color hoverColor

		// color #000
	
	.lswitch-panel .panel-default
		border none
		background none
	
	#lswitch-olcont, #lswitch-blcont
		background-color none
		border-radius 0 0 .4em .4em
		margin-top -1px
	
	#lswitch-olcont a:last-child, #lswitch-blcont a:last-child
		border-radius 0 0 .4em .4em
	
	.lswitch-panel:hover #lswitch-olcont, .lswitch-panel:hover #lswitch-blcont
		none
