
select-color-hex = #bbb
select-color = #3D80BE

header-color-hex = #bbb
header-color = rgba(42, 111, 175, 1)
	
hover-color-hex = rgba(210,210,210,.5)

#lswitch-btn
	z-index 1
	position absolute
	left 0px
	bottom 80px
	padding 8px 3px 5px 0px
	border 1px solid #999
	border-width 1px 1px 1px 0
	box-shadow 1px 1px 4px 0 rgba(100,100,100,.5)
	background-color #fff
	background-color rgba(255,255,255,.8)
	cursor pointer
	border-radius: 0 .4em .4em 0


.lswitch-panel .panel
	box-shadow none



.lswitch-panelslide
	transition margin-left 300ms ease


.lswitch-panel
	box-shadow inset #000 -3px 0px 17px
	
	z-index -1
	position absolute
	left 0px
	top 0px
	width 70%
	height 100%
	max-width 300px
	background-color #38454E
	padding 0 20px
	padding-top 1em
	overflow-y auto
	-ms-overflow-style -ms-autohiding-scrollbar !important /* Nasty bug fix Required for WP8 IE10!!! */
	font-size 1.4em

.map-with-header .lswitch-panel
	padding-top 4em


.lswitch-panel a
	cursor pointer
	background none //#38454E
	// color #eee
	border none
	// border-radius: 0 !important
	margin-top 1px


.lswitch-panel a:hover, .lswitch-panel a:active
	// background-color #38454E /* For mobile screens - use same background-color during hover as for default */
	// color #fff
	// border-radius: 0


.lswitch-panel a.active
	cursor pointer
	// background-color #333
	// background-color rgba(0,0,0,.4)
	// color #fff
	// font-weight normal


.lswitch-panel a.active:hover, .lswitch-panel a.active:active
	// background-color #333
	// background-color rgba(0,0,0,.4)
	// color #fff


.lswitch-panel .panel-default
	border none
	background-color #38454E



/* Added to html and body temporarily to avoid scrollbars during transitions */
.lswitch-overflow-hidden
	overflow hidden !important	


.panel-with-toolbar
	padding-top 5em



@media (max-width: 991px)
	// Zoom-in-effect when showing and hiding the panel
	.lswitch-panel .panel
		transition all 400ms
		transform translate(-20%,0) scale(0.95)
	
	.lswitch-panel.panel-visible .panel
		transform translate(0,0) scale(1)
	
	.lswitch-panel a
		color #fff
		background none
	
	.lswitch-panel a.active, .lswitch-panel a.active:hover, .lswitch-panel a.active:active
		background none !important
		background #000 !important
		color #fff
	
	.lswitch-panel a:hover
		background none !important
	



@media (min-width: 992px)
	/* For desktop computers */
	
	
	/* Avoid things appearing under the switcher */
	.leaflet-left
		left 310px
	
	
	#mapdiv
		margin-left 0px !important
	
	
	#lswitch-btn
		display none !important
	
	
	.lswitch-panel
		box-shadow none
		transition all 300ms
		
		display block !important
		background-color #fff
		background-color rgba(255,255,255, 0)
		z-index 900

		max-height 100%

		// Note! One problem that comes with position:relative here is that 
		// if the layer panel is higher than the win height, scrollbars
		// won't appear, and the overflow:hidden of the parent container
		// is also not hiding the div.
		position relative
	
	.lswitch-panel a
		// background none
		transition all 100ms
	
	.lswitch-panel a:hover, .lswitch-panel a:active
		background-color hover-color-hex
		// color #000
	
	.lswitch-panel a.active:hover, .lswitch-panel a.active:active
		// background-color select-color-hex
		// background-color select-color
		// color #fff
	
	
	.lswitch-panel a.active
		// cursor pointer
		// background-color select-color-hex
		// background-color select-color
		// color #fff
		// font-weight normal
	
	.lswitch-panel .panel-default
		border none
		background none
	
	
	
	
	#lswitch-olcont, #lswitch-blcont
		background-color rgba(255,255,255,.4)
		border-radius: 0 0 .4em .4em
	
	#lswitch-olcont a:last-child, #lswitch-blcont a:last-child
		border-radius: 0 0 .4em .4em
	
	.lswitch-panel:hover #lswitch-olcont, .lswitch-panel:hover #lswitch-blcont
		background-color none
	 
	
