
generalMargins = 5px
fontFamily = "OpenSans", "Droid Sans", "Verdana", "DejaVu Sans", "Bitstream Vera Sans", sans-serif

.smap-search-div-in-toolbar
	top .2em !important
	z-index 1002 !important


.smap-search-div-focused
	max-width 450px !important


#smap-search-div .form-control, #smap-search-div .input-group-addon
	border none

#smap-search-div
	position relative
	left generalMargins
	top generalMargins
	z-index 1010
	width 79%
	max-width 380px
	-webkit-transition left .3s, max-width .3s
	transition left .3s, max-width .3s ease
	overflow-y hidden
	border 1px solid #ccc
	input
		letter-spacing -1px
		width 100%
		border-left none
		/*border none
		border 1px solid #ccc
		border-width 1px 1px 1px 0*/
		-webkit-box-shadow none
		box-shadow none
		-webkit-appearance none
		border-radius 0 !important
	input:focus
		border-color #ccc
	.dropdown-menu
		/* Autocomplete Typehead overrides */
		left 0px !important
	.input-group-addon
		background-color #fff !important
		padding-right 0 !important
		border-radius 0 !important


.dropdown-menu>li>a
	line-height 2.5

/* Typehead overrides END */


#smap-search-bg
	background-color rgba(255,255,255,0)
	width 100%
	height 100%
	z-index 1000
	left 0px
	top 0px
	position absolute
	-webkit-transition background-color .3s
	transition background-color .3s

.search-bg-visible
	background-color #fff !important
	background-color rgba(255,255,255,0.8) !important


.search-active
	left 2% !important
	max-width 600px !important

.search-active ul
	width 95% !important
	max-width 635px


@media (max-width: 767px)
	.smap-search-div-in-toolbar
		max-width 80% !important
	
	
@media (max-width: 467px)
	.smap-search-div-focused
		max-width calc(100% - 10px) !important
		width auto !important



@media (min-width: 992px)
	#smap-search-div
		left generalMargins + 309
		

