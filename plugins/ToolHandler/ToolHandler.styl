.th-btn
	margin-left 10px


.thandler-container.thandler-visible
	display block

@media (max-width: 991px)
	
	.thandler-container
		display none

	.thandler-popover
		left auto !important
		right .2em

	.thandler-popover .popover-content .leaflet-control
		clear none
		margin .2em

	.thandler-popover .popover-content
		padding .5em
		padding-bottom 3.7em

	.thandler-popover .arrow
		left auto !important
		right .7em

@media (min-width: 992px)
	.thandler-btn
		display none

