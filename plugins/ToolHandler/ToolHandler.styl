@import "global"

.thandler-btn
	z-index 1001
	position absolute
	left auto
	right generalMargins
	top generalMargins // Fit search field's style
	button
		width 52px
		height 47px
		border-radius 0 !important

// .btn-group-vertical > .th-btn
