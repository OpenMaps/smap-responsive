// .leaflet-top.leaflet-right .leaflet-control, .thandler-container .leaflet-control
	

.thandler-container.thandler-visible
	display block

@media (max-width: 991px)
	
	.thandler-container
		display none

	.thandler-popover
		left auto !important
		right .2em

	.thandler-popover .popover-content .leaflet-control
		clear none
		margin .2em
		button
			width 2.75em

	.thandler-popover .popover-content
		padding .5em
		padding-bottom 3.7em

	.thandler-popover .arrow
		left auto !important
		right 1.7em

@media (min-width: 992px)
	.thandler-btn
		display none

